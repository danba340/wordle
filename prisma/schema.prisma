datasource db {
        url      = env("DATABASE_URL")
        provider = "postgresql"
}

generator client {
        provider = "prisma-client-js"
}

model Player {
        id     String   @id @default(uuid())
        name   String
        rooms  Room[]
        Result Result[]
}

model Room {
        id      String   @id @default(uuid())
        name    String
        matches Match[]
        players Player[]
}

model Match {
        id        String   @id @default(uuid())
        createdAt DateTime @default(now())
        results   Result[]
        word      String   @default("")
        room      Room     @relation(fields: [roomId], references: [id])
        roomId    String
}

model Result {
        id        String   @id @default(uuid())
        createdAt DateTime @default(now())
        match     Match    @relation(fields: [matchId], references: [id])
        matchId   String
        guesses   String[]
        player    Player   @relation(fields: [playerId], references: [id])
        playerId  String
}
